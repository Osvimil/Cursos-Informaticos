<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_amber_700"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lineal"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nombre"
                android:text="@string/nombre"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editnombre"
                android:layout_marginTop="2dp"
                android:hint="name"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/apellidos"
                android:text="@string/apellidos"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editapellidos"
                android:layout_marginTop="2dp"
                android:hint="surnames"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edad"
                android:text="@string/edad"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editmaterias"
                android:layout_marginTop="2dp"
                android:hint="age"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/escuela"
                android:text="@string/escuela"
                android:layout_marginTop="2dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editid"
                android:layout_marginTop="2dp"
                android:hint="school"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/boton"
                android:text="@string/datos"
                android:layout_marginTop="2dp"
                android:background="@color/md_light_green_300"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ver"
                android:text="@string/ver_datos"
                android:layout_marginTop="2dp"
                android:background="@color/md_light_green_300"
                android:textColor="#fff"
                android:textStyle="bold"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/actualizar"
                android:layout_marginTop="2dp"
                android:text="@string/actualizar"
                android:background="@color/md_light_green_300"
                android:textColor="#fff"
                android:textStyle="bold"

                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/borrar"
                android:layout_marginTop="2dp"
                android:text="@string/borrar"
                android:background="@color/md_light_green_300"
                android:textColor="#fff"
                android:textStyle="bold"

                />
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>